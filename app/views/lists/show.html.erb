<h1>This is <%= @list.name %> List</h1>


<% if @list.photo.attached? %>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400 %>
<% else %>
   <%= image_tag 'waterfront.jpg', height: 300, width: 400 %>
<% end %>

<div>
  <%= link_to new_list_bookmark_path(@list), class: 'btn btn-primary' do %>
     <i class="fas fa-plus"></i> Add movie
  <% end %>
     <%= link_to list_path(@list), method: :delete, class: 'btn btn-danger', data: { confirm: 'Do you want to delete this file?' } do %>
      <i class="fas fa-trash-alt"></i> Delete list
  <% end %>
</div>
